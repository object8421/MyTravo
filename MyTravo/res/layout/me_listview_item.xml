<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_travel_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="10dp"
    android:background="@drawable/card_bg"
    android:orientation="vertical"
    android:padding="8dp" >

    <ImageView
        android:id="@+id/me_image"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop"
        android:src="@drawable/me_default_image" />

    <TextView
        android:id="@+id/me_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/me_image"
        android:layout_alignTop="@+id/me_image"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="14dp"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="TextView"
        android:textColor="#ffffff"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/me_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/me_image"
        android:layout_alignRight="@+id/me_image"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="10dp"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:text="TextView"
        android:textColor="#ffffff"
        android:textSize="14sp" />

</RelativeLayout>
