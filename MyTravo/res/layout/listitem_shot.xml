<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/card_bg"
     >

    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="250dip"
        android:background="#c9c9c9"
        android:layout_marginBottom="4dip"
        android:scaleType="centerCrop"/>

    <ImageView
        android:id="@+id/userinfo_avatar"
        android:layout_width="26dip"
        android:layout_height="26dip"
        android:layout_below="@+id/image"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:layout_marginTop="4dip"
        android:scaleType="fitXY" />

    <LinearLayout
        android:id="@+id/layout_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dip"
        android:orientation="horizontal"
        >

       <!--  <TextView
            android:id="@+id/text_view_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginRight="6dip"
            android:drawablePadding="3dip"
            android:textColor="#7E7E7E"
            android:drawableLeft="@drawable/ic_view"/>--> 

        <TextView
            android:id="@+id/text_comment_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dip"
            android:textSize="12sp"
            android:drawablePadding="3dip"
            android:textColor="#7E7E7E"
            android:drawableLeft="@drawable/ic_comment"/>

        <TextView
            android:id="@+id/text_like_count"
            android:drawablePadding="3dip"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:textColor="#7E7E7E"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_like"/>
    </LinearLayout>

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/image"
        android:layout_toLeftOf="@id/layout_count"
        android:layout_toRightOf="@id/userinfo_avatar"
        android:ellipsize="end"
        android:lines="1"
        android:textColor="#7E7E7E"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_toRightOf="@id/userinfo_avatar"
        android:textColor="#3F83AA"
        android:layout_below="@id/content"
        />


    <TextView
        android:id="@+id/time"
        android:textColor="#B1B1B1"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_count"
        android:layout_alignParentRight="true"
        android:layout_marginRight="4dip"
        />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/image"
        android:layout_alignTop="@+id/image"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="40dp"
        android:shadowColor="@android:color/black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="1"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

</RelativeLayout>